{
  "firestore": {
    "rules": "firestore.rules", 
     "indexes": "firestore.indexes.json" 
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": ".", 
    "ignore": [ 
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {  
    "rules": "storage.rules" 
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080,
      "rules": "firestore.rules" 
    },
    "storage": {
      "rules": "storage.rules", 
      "port": 9199
    },
    "hosting": { 
        "port": 5000 
    },
    "ui": {
      "enabled": true,
      "port": 4000 
    },
    "singleProjectMode": true
  }
}